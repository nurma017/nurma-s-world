from flask import Flask, render_template, request, redirect, url_for, session

app = Flask(__name__)
app.secret_key = "supersecretkey"

# In-memory storage for simplicity
users = {}

@app.route('/', methods=['GET'])
def home():
    return render_template('home.html')

@app.route('/preferences', methods=['POST'])
def preferences():
    name = request.form.get("name")
    if not name:
        return redirect(url_for("home"))
    
    session['name'] = name
    users[name] = {"preferences": {}, "recipes": []}
    return render_template('preferences.html')

@app.route('/save_preferences', methods=['POST'])
def save_preferences():
    name = session.get('name')
    if not name:
        return redirect(url_for("home"))
    
    dietary_restrictions = request.form.get("dietary_restrictions")
    favorite_cuisine = request.form.get("favorite_cuisine")
    meals_per_week = request.form.get("meals_per_week")
    
    users[name]["preferences"] = {
        "dietary_restrictions": dietary_restrictions,
        "favorite_cuisine": favorite_cuisine,
        "meals_per_week": meals_per_week
    }
    
    return redirect(url_for("recipe_input"))

@app.route('/recipe_input', methods=['GET', 'POST'])
def recipe_input():
    name = session.get('name')
    if not name:
        return redirect(url_for("home"))
    
    if request.method == 'POST':
        recipe_name = request.form.get("recipe_name")
        ingredients = request.form.get("ingredients")
        
        if recipe_name and ingredients:
            users[name]["recipes"].append({
                "recipe_name": recipe_name,
                "ingredients": ingredients
            })
        
        return redirect(url_for("recipe_plan"))
    
    return render_template('recipe_input.html')

@app.route('/recipe_plan', methods=['GET'])
def recipe_plan():
    name = session.get('name')
    if not name:
        return redirect(url_for("home"))
    
    user_data = users.get(name, {})
    preferences = user_data.get("preferences", {})
    recipes = user_data.get("recipes", [])
    
    return render_template('recipe_plan.html', preferences=preferences, recipes=recipes)

if __name__ == '__main__':
    app.run(debug=True)